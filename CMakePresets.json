{
  "version": 3,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 20,
    "patch": 0
  },
  "configurePresets": [
    {
      "name": "linux-common",
      "hidden": true,
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/out/build/${presetName}",
      "cacheVariables": {
        "CMAKE_INSTALL_PREFIX": "${sourceDir}/out/install/${presetName}"
      },
      "vendor": {
        "microsoft.com/VisualStudioSettings/CMake/1.0": {
          "hostOS": [
            "Linux"
          ]
        },
        "microsoft.com/VisualStudioRemoteSettings/CMake/1.0": {
          "sourceDir": "$env{HOME}/.vs/$ms{projectDirName}"
        }
      }
    },
    {
      "name": "linux-gcc",
      "inherits": "linux-common",
      "hidden": true,
      "cacheVariables": {
        "CMAKE_C_COMPILER": "gcc",
        "CMAKE_CXX_COMPILER": "g++"
      }
    },
    {
      "name": "linux-gcc-debug",
      "displayName": "Linux Debug",
      "description": "Target WSL or a remote Linux system with g++.",
      "inherits": "linux-gcc",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug"
      }
    },
    {
      "name": "linux-gcc-release",
      "displayName": "Linux Release",
      "description": "Target WSL or a remote Linux system with g++.",
      "inherits": "linux-gcc",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release"
      }
    },
    {
      "name": "linux-gcc-relWithDebInfo",
      "displayName": "Linux RelWithDebInfo",
      "description": "Target WSL or a remote Linux system with g++.",
      "inherits": "linux-gcc",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "RelWithDebInfo"
      }
    },
    {
      "name": "linux-gcc-minSizeRel",
      "displayName": "Linux MinSizeRel",
      "description": "Target WSL or a remote Linux system with g++.",
      "inherits": "linux-gcc",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "MinSizeRel"
      }
    },

    {
      "name": "macos-default",
      "displayName": "macOS Debug",
      "description": "Target a remote macOS system with Ninja",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/out/build/${presetName}",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "CMAKE_INSTALL_PREFIX": "${sourceDir}/out/install/${presetName}",
        "CMAKE_C_COMPILER": "gcc",
        "CMAKE_CXX_COMPILER": "g++"
      },
      "vendor": {
        "microsoft.com/VisualStudioSettings/CMake/1.0": {
          "hostOS": [
            "macOS"
          ]
        },
        "microsoft.com/VisualStudioRemoteSettings/CMake/1.0": {
          "sourceDir": "$env{HOME}/.vs/$ms{projectDirName}"
        }
      }
    },

    {
      "name": "windows-common",
      "hidden": true,
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/out/build/${presetName}",
      "architecture": {
        "value": "x64",
        "strategy": "external"
      },
      "cacheVariables": {
        "CMAKE_INSTALL_PREFIX": "${sourceDir}/out/install/${presetName}",
        "CMAKE_C_COMPILER": "cl.exe",
        "CMAKE_CXX_COMPILER": "cl.exe"
      },
      "vendor": {
        "microsoft.com/VisualStudioSettings/CMake/1.0": {
          "hostOS": [
            "Windows"
          ]
        }
      }
    },
    {
      "name": "windows-debug",
      "displayName": "Windows x64 Debug",
      "description": "Target Windows with Visual C++.",
      "inherits": "windows-common",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug"
      }
    },
    {
      "name": "windows-release",
      "displayName": "Windows x64 Release",
      "description": "Target Windows with Visual C++.",
      "inherits": "windows-common",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release"
      }
    }
  ],

  "buildPresets": [
    {
      "name": "gcc-debug",
      "configurePreset": "linux-gcc-debug",
      "configuration": "Debug"
    },
    {
      "name": "gcc-release",
      "configurePreset": "linux-gcc-release",
      "configuration": "Release"
    },
    {
      "name": "gcc-relWithDebInfo",
      "configurePreset": "linux-gcc-relWithDebInfo",
      "configuration": "RelWithDebInfo"
    },
    {
      "name": "gcc-minSizeRel",
      "configurePreset": "linux-gcc-minSizeRel",
      "configuration": "MinSizeRel"
    },

    {
      "name": "msvc-debug",
      "configurePreset": "windows-debug",
      "configuration": "Debug"
    },
    {
      "name": "msvc-release",
      "configurePreset": "windows-release",
      "configuration": "Release"
    }
  ]

}
